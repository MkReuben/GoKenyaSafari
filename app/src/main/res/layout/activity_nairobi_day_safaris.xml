<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Safaris.NairobiDaySafaris">

    <TextView
        android:id="@+id/tv_nairobi_day_safari_packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nairobi Day Safari Packages"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nairobi_day_safaris"
        android:layout_below="@id/tv_nairobi_day_safari_packages"
        >


    </ListView>

    <ImageView
        android:id="@+id/callus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/callus"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>