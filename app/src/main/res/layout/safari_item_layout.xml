<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/safari_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safari Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/safari_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/safari_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:src="@drawable/loading"
            />
        <TextView
            android:id="@+id/safari_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safari_image"
            android:text="Service Description"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/safari_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safari_description"
            android:text="Service Price"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimaryDark"
            />





    </RelativeLayout>

</androidx.cardview.widget.CardView>