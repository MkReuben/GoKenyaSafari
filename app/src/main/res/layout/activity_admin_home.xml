<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".Admins.AdminHomeActivity">

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/kenyasafaribeach"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_image"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/kenyasafaribg"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            app:civ_border_color="#FFF"/>
        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Admins"
            android:fontFamily="@font/blacklist"
            android:textColor="#FFF"
            android:layout_marginLeft="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linear_one"
        android:layout_marginTop="15dp"
        >

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_one"
            >


            <ImageView
                android:id="@+id/maintain_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/maintainadmin"
                android:background="#FFF"
                android:textSize="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:padding="9dp"
                android:textStyle="bold|italic"
                android:textColorHint="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/tv_maintain"
                android:text="Maintain Safari Package"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="9dp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/maintain_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_nine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linear_two"
        android:layout_marginTop="15dp"
        >

        <RelativeLayout
            android:id="@+id/r9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_one"
            >


            <ImageView
                android:id="@+id/add_new_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/addadmin"
                android:background="#FFF"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:padding="9dp"
                android:textStyle="bold|italic"
                android:textColorHint="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/tv_add_new"
                android:text="Add New Safari Package"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="9dp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/add_new_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_five"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linear_nine"
        android:layout_marginTop="15dp"
        >

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_two"
            >


            <ImageView
                android:id="@+id/send_notification"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sendadmin"
                android:background="#FFF"
                android:textSize="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:padding="9dp"
                android:textStyle="bold|italic"
                android:textColorHint="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/tv_send_notification"
                android:text="Send Notifications"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="9dp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/send_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linear_five"
        android:layout_marginTop="15dp"
        >

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_one"
            >


            <ImageView
                android:id="@+id/logout_admin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logoutadmin"
                android:background="#FFF"
                android:textSize="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:padding="9dp"
                android:textStyle="bold|italic"
                android:textColorHint="@color/colorPrimaryDark"

                />
            <TextView
                android:id="@+id/tv_logout_admin"
                android:text="Logout"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="9dp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/logout_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>