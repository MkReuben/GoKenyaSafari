<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TopTourSafaris.MasaiMara">

    <TextView
        android:id="@+id/tv_masai_top_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masai Mara Top Tour Safari"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        />
    <TextView
        android:id="@+id/top_tour_masai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_masai_top_tour"
        android:text="@string/masai_top_tour"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <ListView
        android:id="@+id/masaai_mara"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_below="@id/top_tour_masai"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>